@model IEnumerable<Core.Entities.Product>
@{
    ViewData["Title"] = "Kavya's Creations - Handcrafted Excellence";
}

<!-- Hero Section -->
<section class="hero-section bg-gradient py-5 rounded-3 mb-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Kavya's Creations</h1>
                <p class="lead text-muted mb-4">Discover unique handcrafted products made with love and passion. Each piece tells a story.</p>
                <div class="d-flex gap-3">
                    <a class="btn btn-primary btn-lg" asp-area="Store" asp-page="/Catalog/Index">
                        <i class="bi bi-shop"></i> Shop Now
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Register">
                            <i class="bi bi-person-plus"></i> Create Account
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img class="img-fluid rounded shadow-lg" src="~/images/hero-image.jpg" alt="Handcrafted Products" style="max-height: 400px; object-fit: cover;" />
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
@if (Model.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-6 fw-semibold">Featured Products</h2>
                <p class="text-muted">Explore our latest handcrafted creations</p>
            </div>

            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card product-card h-100 shadow-sm">
                            <div class="position-relative">
                                @if (product.Images.Any())
                                {
                                    <img src="@product.Images.First().Url" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/uploads/products/placeholder.svg" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;" />
                                }
                                
                                @if (product.LowStockAlert)
                                {
                                    <span class="badge bg-warning position-absolute top-0 end-0 m-2">
                                        Only @product.AvailableStock left!
                                    </span>
                                }
                                else if (product.AvailableStock == 0)
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                        Out of Stock
                                    </span>
                                }
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted small flex-grow-1">
                                    @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="h5 mb-0 text-primary">$@product.Price.ToString("N2")</span>
                                    <a asp-area="Store" asp-page="/Catalog/Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a asp-area="Store" asp-page="/Catalog/Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-grid"></i> View All Products
                </a>
            </div>
        </div>
    </section>
}

<!-- Features Section -->
<section class="py-5 bg-light rounded-3">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-hand-thumbs-up display-4 text-primary"></i>
                </div>
                <h5 class="fw-semibold">Handcrafted Quality</h5>
                <p class="text-muted">Every product is carefully crafted with attention to detail and quality materials.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-truck display-4 text-primary"></i>
                </div>
                <h5 class="fw-semibold">Fast Shipping</h5>
                <p class="text-muted">Quick and reliable delivery to your doorstep with tracking available.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-shield-check display-4 text-primary"></i>
                </div>
                <h5 class="fw-semibold">Secure Shopping</h5>
                <p class="text-muted">Your personal information and payments are always protected and secure.</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    .hero-section .text-muted {
        color: rgba(255,255,255,0.8) !important;
    }
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>

    </div>
</section>
