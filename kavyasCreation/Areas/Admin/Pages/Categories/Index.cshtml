@page
@model kavyasCreation.Areas.Admin.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Manage Categories";
}
<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="display-6 mb-1">Categories</h1>
            <p class="text-muted mb-0">Organize products into manageable collections.</p>
        </div>
        <a class="btn btn-primary" asp-page="/Categories/Create" asp-area="Admin">Add Category</a>
    </div>

    @if (!Model.Categories.Any())
    {
        <div class="alert alert-info">No categories available.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td class="text-muted">@category.Description</td>
                            <td class="text-end">
                                <a class="btn btn-outline-secondary btn-sm" asp-page="/Categories/Edit" asp-area="Admin" asp-route-id="@category.Id">Edit</a>
                                <a class="btn btn-outline-danger btn-sm" asp-page="/Categories/Delete" asp-area="Admin" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
