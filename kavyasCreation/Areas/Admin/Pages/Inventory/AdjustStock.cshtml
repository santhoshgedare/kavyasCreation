@page "{id:guid}"
@model kavyasCreation.Areas.Admin.Pages.Inventory.AdjustStockModel
@{
    ViewData["Title"] = "Adjust Stock";
}

<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="display-6 mb-1">Adjust Stock</h1>
            <p class="text-muted mb-0">Manually adjust inventory levels</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Inventory/Dashboard" asp-area="Admin">Back</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img src="@(Model.Product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" 
                             alt="@Model.Product.Name" 
                             class="rounded" 
                             style="width:80px;height:80px;object-fit:cover;" />
                        <div>
                            <h5 class="mb-1">@Model.Product.Name</h5>
                            <p class="text-muted mb-0">@Model.Product.Category?.Name</p>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-4">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="text-muted small">Current Stock</div>
                                <div class="h4 mb-0">@Model.Product.Stock</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="text-muted small">Reserved</div>
                                <div class="h4 mb-0 text-warning">@Model.Product.ReservedStock</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="text-muted small">Available</div>
                                <div class="h4 mb-0 text-success">@Model.Product.AvailableStock</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Adjustment Quantity</label>
                    <input class="form-control" asp-for="Quantity" type="number" placeholder="Enter positive to add, negative to remove" />
                    <div class="form-text">Positive number to add stock, negative to remove</div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Movement Type</label>
                    <select class="form-select" asp-for="MovementType">
                        <option value="Adjustment">Manual Adjustment</option>
                        <option value="Purchase">Purchase/Restock</option>
                        <option value="Return">Customer Return</option>
                        <option value="Damage">Damage/Loss</option>
                        <option value="Transfer">Transfer</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Notes (Optional)</label>
                    <textarea class="form-control" asp-for="Notes" rows="3" placeholder="Add notes about this adjustment..."></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit">Adjust Stock</button>
                    <a class="btn btn-outline-secondary" asp-page="/Inventory/Dashboard" asp-area="Admin">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
