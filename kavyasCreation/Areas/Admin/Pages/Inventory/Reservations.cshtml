@page
@model kavyasCreation.Areas.Admin.Pages.Inventory.ReservationsModel
@{
    ViewData["Title"] = "Stock Reservations";
}

<section class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="display-6 mb-1">Live Stock Reservations</h1>
            <p class="text-muted mb-0">Real-time view of reserved inventory</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Inventory/Dashboard" asp-area="Admin">Back to Dashboard</a>
    </div>

    @if (Model.ActiveReservations.Any())
    {
        <div class="alert alert-info">
            <strong>@Model.ActiveReservations.Count Active Reservation(s)</strong> - Stock is currently locked for checkout
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
            </svg>
            No active reservations - All stock is available
        </div>
    }
</section>

@if (Model.ActiveReservations.Any())
{
    <section class="bg-white rounded-3 shadow-sm p-4 mb-4">
        <h3 class="mb-3">
            <span class="badge bg-warning text-dark">Active</span> Reservations (In Checkout)
        </h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>User</th>
                        <th>Quantity</th>
                        <th>Reserved At</th>
                        <th>Expires In</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.ActiveReservations)
                    {
                        var timeRemaining = reservation.ExpiresAt - DateTime.UtcNow;
                        var isExpiringSoon = timeRemaining.TotalMinutes < 5;
                        
                        <tr class="@(isExpiringSoon ? "table-warning" : "")">
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (reservation.Product != null)
                                    {
                                        <img src="@(reservation.Product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" 
                                             alt="@reservation.Product.Name" 
                                             class="rounded" 
                                             style="width:40px;height:40px;object-fit:cover;" />
                                        <div>
                                            <div>@reservation.Product.Name</div>
                                            <small class="text-muted">@reservation.Product.Category?.Name</small>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>
                                <code class="small">@reservation.UserId.ToString().Substring(0, 8)</code>
                            </td>
                            <td>
                                <span class="badge bg-primary">@reservation.Quantity units</span>
                            </td>
                            <td>
                                @reservation.ReservedAt.ToString("HH:mm:ss")
                            </td>
                            <td>
                                @if (isExpiringSoon)
                                {
                                    <span class="text-danger fw-bold">
                                        @((int)timeRemaining.TotalMinutes)m @timeRemaining.Seconds s
                                    </span>
                                }
                                else
                                {
                                    <span>
                                        @((int)timeRemaining.TotalMinutes)m @timeRemaining.Seconds s
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                                        <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
                                    </svg>
                                    In Checkout
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
}

@if (Model.CommittedReservations.Any())
{
    <section class="bg-white rounded-3 shadow-sm p-4 mb-4">
        <h3 class="mb-3">
            <span class="badge bg-success">Completed</span> Recent Orders (Last 20)
        </h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>User</th>
                        <th>Quantity</th>
                        <th>Reserved At</th>
                        <th>Order ID</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.CommittedReservations)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (reservation.Product != null)
                                    {
                                        <img src="@(reservation.Product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" 
                                             alt="@reservation.Product.Name" 
                                             class="rounded" 
                                             style="width:40px;height:40px;object-fit:cover;" />
                                        <span>@reservation.Product.Name</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <code class="small">@reservation.UserId.ToString().Substring(0, 8)</code>
                            </td>
                            <td>
                                <span class="badge bg-success">@reservation.Quantity units</span>
                            </td>
                            <td>
                                @reservation.ReservedAt.ToString("g")
                            </td>
                            <td>
                                @if (reservation.OrderId.HasValue)
                                {
                                    <code class="small">@reservation.OrderId.Value.ToString().Substring(0, 8)</code>
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                                    </svg>
                                    Completed
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
}

@if (Model.ExpiredReservations.Any())
{
    <section class="bg-white rounded-3 shadow-sm p-4">
        <h3 class="mb-3">
            <span class="badge bg-secondary">Expired</span> Cancelled/Expired (Last 20)
        </h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>User</th>
                        <th>Quantity</th>
                        <th>Reserved At</th>
                        <th>Expired At</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.ExpiredReservations)
                    {
                        <tr>
                            <td>
                                @if (reservation.Product != null)
                                {
                                    <span>@reservation.Product.Name</span>
                                }
                            </td>
                            <td>
                                <code class="small">@reservation.UserId.ToString().Substring(0, 8)</code>
                            </td>
                            <td>
                                @reservation.Quantity
                            </td>
                            <td>
                                @reservation.ReservedAt.ToString("g")
                            </td>
                            <td>
                                @reservation.ExpiresAt.ToString("g")
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                                    </svg>
                                    Expired
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
}

@section Scripts {
    <script>
        // Auto-refresh every 5 seconds to show live updates
        setTimeout(() => location.reload(), 5000);
    </script>
}
