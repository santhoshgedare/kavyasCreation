@page
@model kavyasCreation.Areas.Store.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Cart";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light rounded-3 p-3 shadow-sm">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Store" asp-page="/Catalog/Index">Catalog</a></li>
        <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
    </ol>
</nav>

<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-1">
                <i class="bi bi-cart3 text-primary"></i> Your Shopping Cart
            </h1>
            <p class="text-muted mb-0">Review and manage items before checkout</p>
        </div>
        <a class="btn btn-outline-primary" asp-page="/Catalog/Index" asp-area="Store">
            <i class="bi bi-arrow-left"></i> Continue Shopping
        </a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-cart-x display-1 text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">Your cart is empty</h3>
            <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
            <a class="btn btn-primary btn-lg" asp-page="/Catalog/Index" asp-area="Store">
                <i class="bi bi-shop"></i> Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th class="text-center">Qty</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(item.ImageUrl ?? "/uploads/products/placeholder.svg")" alt="@item.Name" class="rounded" style="width:64px;height:64px;object-fit:cover;" />
                                    <div class="ms-3">
                                        <div class="fw-semibold">
                                            <a class="text-decoration-none" asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@item.ProductId">@item.Name</a>
                                        </div>
                                        <div class="text-muted">@item.Price.ToString("C")</div>
                                        @if (Model.AvailableStock.TryGetValue(item.ProductId, out var available))
                                        {
                                            @if (available < item.Quantity)
                                            {
                                                <div class="badge bg-danger mt-1">
                                                    Only @available in stock
                                                </div>
                                            }
                                            else if (available < 10)
                                            {
                                                <div class="badge bg-warning text-dark mt-1">
                                                    @available available
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <form method="post" asp-page-handler="Update" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm" style="width:90px;display:inline-block;" />
                                    <button class="btn btn-link btn-sm" type="submit">Update</button>
                                </form>
                            </td>
                            <td class="text-end">@item.Price.ToString("C")</td>
                            <td class="text-end">@(item.Price * item.Quantity).ToString("C")</td>
                            <td class="text-end">
                                <form method="post" asp-page-handler="Remove" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-outline-danger btn-sm" type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end">
            <div class="card shadow-sm" style="min-width:280px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="fw-semibold">Total</span>
                        <span class="fw-bold">@Model.Total.ToString("C")</span>
                    </div>
                    <a class="btn btn-primary w-100 mt-3" asp-page="/Checkout/Index" asp-area="Store">Checkout</a>
                </div>
            </div>
        </div>
    }
</section>
