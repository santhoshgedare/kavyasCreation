@page
@model kavyasCreation.Areas.Store.Pages.Catalog.IndexModel
@{
    ViewData["Title"] = "Catalog";
}
<section class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="display-6 mb-1">Catalog</h1>
            <p class="text-muted mb-0">Browse curated products with enterprise quality.</p>
        </div>
        <a class="btn btn-outline-primary" asp-page="/Cart/Index" asp-area="Store">View Cart (@Model.CartCount)</a>
    </div>
</section>

<section class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <form method="get" class="row g-3">
        <div class="col-md-5">
            <label class="form-label">Search</label>
            <input class="form-control" name="search" value="@Model.Search" placeholder="Search products" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Category</label>
            <select class="form-select" name="categoryId">
                <option value="">All categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end gap-2">
            <button class="btn btn-primary w-100" type="submit">Apply</button>
            <a class="btn btn-outline-secondary w-100" asp-page="/Catalog/Index" asp-area="Store">Reset</a>
        </div>
    </form>
</section>

<section class="row g-4">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id">
                    <img class="card-img-top" src="@(product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" alt="@product.Name" style="height:220px;object-fit:cover;" />
                </a>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title mb-1">@product.Name</h5>
                            <div class="text-muted small">@product.Category?.Name</div>
                        </div>
                        <span class="badge bg-light text-dark">In stock</span>
                    </div>
                    <p class="card-text text-muted mt-2">@product.Description</p>
                    @if (product.Specifications.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            @foreach (var spec in product.Specifications.Take(2))
                            {
                                <span class="badge bg-light text-dark">@spec.Key: @spec.Value</span>
                            }
                        </div>
                    }
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@product.Price.ToString("C")</span>
                        <form method="post" asp-page-handler="Add">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button class="btn btn-primary btn-sm" type="submit">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
