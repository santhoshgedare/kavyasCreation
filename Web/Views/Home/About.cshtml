<!-- Featured Products from Kavya -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Featured Creations</h2>
                <p class="lead text-muted">Some of my favorite pieces I've created recently</p>
            </div>
            <div class="row g-4">
                @foreach (var product in Model.Take(3))
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@(product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                            <div class="card-body">
                                <span class="badge bg-primary mb-2">@(product.Category?.Name ?? "Uncategorized")</span>
                                <h5 class="card-title fw-bold">@product.Name</h5>
                                <p class="card-text text-muted">@(product.Description ?? "")</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0 text-primary">?@product.Price.ToString("N2")</span>
                                    <a asp-area="Store" asp-page="/Catalog/Details" asp-route-id="@product.Id" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-area="Store" asp-page="/Catalog/Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-grid-3x3-gap"></i> View All Products
                </a>
            </div>
        </div>
    </section>
}

