<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kavyasCreation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kavyasCreation.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-4">
                    <a asp-area="Store" asp-page="/Catalog/Index">
                        <img src="~/images/logo.png" alt="Kavya's Creations" class="auth-logo" style="max-width: 200px;" />
                    </a>
                </div>
                
                @RenderBody()
                
                <div class="text-center mt-3">
                    <a class="text-muted text-decoration-none" asp-area="Store" asp-page="/Catalog/Index">
                        <i class="bi bi-arrow-left"></i> Back to Shop
                    </a>
                </div>
            </div>
        </div>
    </main>

    <footer class="border-top bg-white py-3 mt-auto">
        <div class="container text-center">
            <span class="text-muted">&copy; 2026 Kavya's Creations</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        (function () {
            const storageKey = "theme";
            const root = document.documentElement;
            const stored = localStorage.getItem(storageKey) || "light";
            root.setAttribute("data-bs-theme", stored);
        })();
    </script>
</body>
</html>


