@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center py-5">
                <div class="error-icon mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-exclamation-triangle text-warning" viewBox="0 0 16 16">
                        <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.437-.99.98-1.767L8.982 1.566z"/>
                        <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
                    </svg>
                </div>
                
                <h1 class="display-4 fw-bold mb-3">Oops! Something went wrong</h1>
                <p class="lead text-muted mb-4">We're sorry, but an unexpected error occurred while processing your request.</p>

                @if (Model.ShowRequestId)
                {
                    <div class="alert alert-light border shadow-sm mb-4">
                        <strong>Request ID:</strong> <code class="text-primary">@Model.RequestId</code>
                    </div>
                }

                <div class="d-flex gap-3 justify-content-center mb-5">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-house-door"></i> Go Home
                    </a>
                    <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Need Help?</h5>
                        <p class="card-text text-muted">If this problem persists, please contact our support team.</p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="mailto:support@kavyascreations.com" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-envelope"></i> Email Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-icon {
        animation: bounce 2s infinite;
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-10px);
        }
    }
</style>
