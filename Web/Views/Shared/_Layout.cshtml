<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kavyasCreation</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ui-enhancements.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kavyasCreation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-3" asp-area="" asp-controller="Home" asp-action="Index"> 
                    <div class="d-flex flex-column">
                        <span class="brand-title">Kavya's Creations</span>
                        <small class="brand-subtitle">Handcrafted Excellence</small>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                     <li class="nav-item">
                         <a class="nav-link" asp-area="Store" asp-page="/Catalog/Index">Store</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link" asp-area="Store" asp-page="/Cart/Index">Cart</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link" asp-area="Store" asp-page="/Orders/Index">Orders</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link" asp-area="Store" asp-page="/Payment/Index">Payment</a>
                     </li>
                     @if (User.IsInRole("Admin"))
                     {
                         <li class="nav-item dropdown">
                             <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                 <i class="bi bi-gear"></i> Admin
                             </a>
                             <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                 <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                     <i class="bi bi-speedometer2"></i> Dashboard
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Products/Index">
                                     <i class="bi bi-box-seam"></i> Products
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Categories/Index">
                                     <i class="bi bi-tags"></i> Categories
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Inventory/Dashboard">
                                     <i class="bi bi-archive"></i> Inventory
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><h6 class="dropdown-header">Vendor Management</h6></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Vendors/Index">
                                     <i class="bi bi-shop"></i> Manage Vendors
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Vendors/Create">
                                     <i class="bi bi-plus-circle"></i> Create Vendor
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Vendors/Pending">
                                     <i class="bi bi-clock-history"></i> Pending Vendors
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><h6 class="dropdown-header">Buyer Management</h6></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Buyers/Index">
                                     <i class="bi bi-building"></i> Manage Buyers
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Buyers/Create">
                                     <i class="bi bi-plus-circle"></i> Create Buyer
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Buyers/Pending">
                                     <i class="bi bi-clock-history"></i> Pending Buyers
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><a class="dropdown-item" asp-area="Admin" asp-page="/Users/Manage">
                                     <i class="bi bi-people"></i> All Users
                                 </a></li>
                             </ul>
                         </li>
                     }
                     @if (User.IsInRole("VendorAdmin") || User.IsInRole("VendorUser"))
                     {
                         <li class="nav-item dropdown">
                             <a class="nav-link dropdown-toggle" href="#" id="vendorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                 <i class="bi bi-shop"></i> Vendor
                             </a>
                             <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="vendorDropdown">
                                 <li><a class="dropdown-item" asp-area="Vendor" asp-page="/Dashboard/Index">
                                     <i class="bi bi-speedometer2"></i> Dashboard
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><a class="dropdown-item" asp-area="Vendor" asp-page="/Products/Index">
                                     <i class="bi bi-box-seam"></i> My Products
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Vendor" asp-page="/Orders/Index">
                                     <i class="bi bi-cart-check"></i> Orders
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Vendor" asp-page="/Users/Index">
                                     <i class="bi bi-people"></i> Team Members
                                 </a></li>
                             </ul>
                         </li>
                     }
                     @if (User.IsInRole("BuyerAdmin") || User.IsInRole("BuyerUser"))
                     {
                         <li class="nav-item dropdown">
                             <a class="nav-link dropdown-toggle" href="#" id="buyerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                 <i class="bi bi-building"></i> Buyer
                             </a>
                             <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="buyerDropdown">
                                 <li><a class="dropdown-item" asp-area="Buyer" asp-page="/Dashboard/Index">
                                     <i class="bi bi-speedometer2"></i> Dashboard
                                 </a></li>
                                 <li><hr class="dropdown-divider"></li>
                                 <li><a class="dropdown-item" asp-area="Buyer" asp-page="/Orders/Index">
                                     <i class="bi bi-cart-check"></i> Company Orders
                                 </a></li>
                                 <li><a class="dropdown-item" asp-area="Buyer" asp-page="/Users/Index">
                                     <i class="bi bi-people"></i> Team Members
                                 </a></li>
                             </ul>
                         </li>
                     }
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        <button id="themeToggle" class="theme-toggle" type="button" aria-label="Toggle theme">
                            <span id="themeIcon">🌙</span>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light py-4 mt-auto">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">Kavya's Creations</h5>
                    <p class="text-muted">Handcrafted excellence in bangles, sarees, and blouses. Each piece made with love and tradition.</p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-muted" title="Facebook">
                            <i class="bi bi-facebook fs-4"></i>
                        </a>
                        <a href="#" class="text-muted" title="Instagram">
                            <i class="bi bi-instagram fs-4"></i>
                        </a>
                        <a href="#" class="text-muted" title="Twitter">
                            <i class="bi bi-twitter fs-4"></i>
                        </a>
                        <a href="#" class="text-muted" title="Pinterest">
                            <i class="bi bi-pinterest fs-4"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6 class="fw-semibold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" asp-area="Store" asp-page="/Catalog/Index">Shop</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" asp-area="Store" asp-page="/Cart/Index">Cart</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" asp-area="Store" asp-page="/Orders/Index">Orders</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-semibold mb-3">Customer Service</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="text-muted text-decoration-none" href="#">Contact Us</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" href="#">Shipping Info</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" href="#">Returns</a></li>
                        <li class="mb-2"><a class="text-muted text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-semibold mb-3">Contact Info</h6>
                    <ul class="list-unstyled text-muted">
                        <li class="mb-2"><i class="bi bi-envelope me-2"></i> support@kavyascreations.com</li>
                        <li class="mb-2"><i class="bi bi-phone me-2"></i> +1 (555) 123-4567</li>
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i> Made with love, shipped worldwide</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-muted">&copy; 2026 Kavya's Creations. All rights reserved.</div>
                <div class="mt-3 mt-md-0">
                    <img src="~/images/payment-methods.svg" alt="Payment Methods" style="height: 30px;" onerror="this.style.display='none'">
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Back to Top Button -->
    <button id="backToTop" class="btn btn-primary position-fixed bottom-0 end-0 m-4 rounded-circle shadow-lg" style="width: 50px; height: 50px; display: none; z-index: 1000;" title="Back to top">
        <i class="bi bi-arrow-up"></i>
    </button>
    
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div data-success-message="@TempData["SuccessMessage"]"></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div data-error-message="@TempData["ErrorMessage"]"></div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div data-info-message="@TempData["InfoMessage"]"></div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div data-warning-message="@TempData["WarningMessage"]"></div>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui-enhancements.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            const storageKey = "theme";
            const toggle = document.getElementById("themeToggle");
            const icon = document.getElementById("themeIcon");
            const root = document.documentElement;

            const applyTheme = (theme) => {
                root.setAttribute("data-bs-theme", theme);
                if (icon) {
                    icon.textContent = theme === "dark" ? "☀️" : "🌙";
                }
            };

            const stored = localStorage.getItem(storageKey) || "light";
            applyTheme(stored);

            if (toggle) {
                toggle.addEventListener("click", () => {
                    const current = root.getAttribute("data-bs-theme") === "dark" ? "dark" : "light";
                    const next = current === "dark" ? "light" : "dark";
                    localStorage.setItem(storageKey, next);
                    applyTheme(next);
                });
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
