@page
@model Web.Areas.Store.Pages.Catalog.IndexModel
@{
    ViewData["Title"] = "Kavya's Creations - Handcrafted Excellence";
}

<!-- Beautiful Simple Filter Bar -->
<section class="filter-bar-compact">
    <div class="container-fluid">
        <form method="get" asp-page="/Catalog/Index" asp-area="Store" class="filter-form-compact">
            <div class="filter-group">
                <div class="search-compact">
                    
                    <input class="form-control" name="search" value="@Model.Search" placeholder="Search products..." />
                    <i class="bi bi-search"></i>
                </div>
                
                <select class="form-select category-select-compact" name="categoryId">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        if (Model.CategoryId == category.Id)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                
                <button class="btn-filter-apply" type="submit">
                    <i class="bi bi-funnel-fill"></i>
                    <span class="d-none d-md-inline">Apply</span>
                </button>
                
                <a class="btn-filter-reset" asp-page="/Catalog/Index" asp-area="Store" title="Clear filters">
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
            </div>
            
            <div class="filter-meta">
                <span class="product-count">@Model.TotalCount products found</span>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a class="cart-link-compact" asp-page="/Cart/Index" asp-area="Store">
                        <i class="bi bi-cart3"></i>
                        <span class="cart-count">@Model.CartCount</span>
                        <span class="d-none d-lg-inline">Cart</span>
                    </a>
                }
                else
                {
                    <a class="login-link-compact" asp-area="Identity" asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span class="d-none d-lg-inline">Login to Shop</span>
                    </a>
                }
            </div>
        </form>
    </div>
</section>

<!-- Modern Product Grid -->
@if (Model.Products.Any())
{
    <section class="products-grid-modern">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="product-card-modern">
                            <!-- Product Image -->
                            <div class="product-image-wrapper">
                                <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id">
                                    <img src="@(product.ImageUrl ?? "/uploads/products/placeholder.svg")" 
                                         alt="@product.Name" 
                                         class="product-image" />
                                </a>
                                
                                <!-- Stock Badge -->
                                <div class="product-badge">
                                    @if (product.AvailableStock > 0 && product.AvailableStock <= 5)
                                    {
                                        <span class="badge-modern badge-warning">
                                            <i class="bi bi-exclamation-circle"></i> @product.AvailableStock left
                                        </span>
                                    }
                                    else if (product.AvailableStock > 0)
                                    {
                                        <span class="badge-modern badge-success">
                                            <i class="bi bi-check2"></i> In Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-danger">
                                            Sold Out
                                        </span>
                                    }
                                </div>

                                <!-- Quick View Button -->
                                <div class="quick-view-btn">
                                    <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id" 
                                       class="btn btn-sm btn-light">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>

                            <!-- Product Info -->
                            <div class="product-info">
                                @if (!string.IsNullOrWhiteSpace(product.CategoryName))
                                {
                                    <div class="product-category">@product.CategoryName</div>
                                }
                                <h3 class="product-title">
                                    <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id">
                                        @product.Name
                                    </a>
                                </h3>
                                <p class="product-description">
                                    @if (!string.IsNullOrWhiteSpace(product.Description))
                                    {
                                        @(product.Description.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)
                                    }
                                </p>

                                <!-- Price and Action -->
                                <div class="product-footer">
                                    <div class="product-price">
                                        <span class="price-amount">@product.Price.ToString("C")</span>
                                    </div>
                                    
                                    @if (product.AvailableStock > 0)
                                    {
                                        @if (User.Identity?.IsAuthenticated == true)
                                        {
                                            <form method="post" asp-page-handler="Add" class="add-to-cart-form">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <button class="btn-add-modern" type="submit" title="Add to Cart">
                                                    Add to Cart
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@($"/Store/Catalog?productId={product.Id}")" 
                                               class="btn-add-modern">
                                                Login to Buy
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn-add-modern btn-disabled" disabled>
                                            Out of Stock
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    @if (Model.TotalPages > 1)
    {
        <section class="pagination-section">
            <div class="container-fluid">
                <nav aria-label="Product navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Catalog/Index" asp-area="Store"
                                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                                   asp-route-search="@Model.Search"
                                   asp-route-categoryId="@Model.CategoryId"
                                   aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                        }

                        @{
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Catalog/Index" asp-area="Store"
                                       asp-route-pageNumber="1"
                                       asp-route-search="@Model.Search"
                                       asp-route-categoryId="@Model.CategoryId">1</a>
                                </li>
                                if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            for (var i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="/Catalog/Index" asp-area="Store"
                                       asp-route-pageNumber="@i"
                                       asp-route-search="@Model.Search"
                                       asp-route-categoryId="@Model.CategoryId">@i</a>
                                </li>
                            }

                            if (endPage < Model.TotalPages)
                            {
                                if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Catalog/Index" asp-area="Store"
                                       asp-route-pageNumber="@Model.TotalPages"
                                       asp-route-search="@Model.Search"
                                       asp-route-categoryId="@Model.CategoryId">@Model.TotalPages</a>
                                </li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Catalog/Index" asp-area="Store"
                                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                                   asp-route-search="@Model.Search"
                                   asp-route-categoryId="@Model.CategoryId"
                                   aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">&raquo;</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </section>
    }
}
else
{
    <section class="empty-state">
        <div class="container">
            <div class="text-center py-5">
                <div class="empty-icon mb-4">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3 class="mb-3">No products found</h3>
                <p class="text-muted mb-4">Try adjusting your filters or search terms</p>
                <a asp-page="/Catalog/Index" asp-area="Store" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-counterclockwise"></i> Clear Filters
                </a>
            </div>
        </div>
    </section>
}



