@page
@model Web.Areas.Store.Pages.Catalog.IndexModel
@{
    ViewData["Title"] = "Catalog";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light rounded-3 p-3 shadow-sm">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Catalog</li>
    </ol>
</nav>

<section class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="display-6 mb-1">
                <i class="bi bi-shop text-primary"></i> Our Catalog
            </h1>
            <p class="text-muted mb-0">Discover our exquisite collection of handcrafted products</p>
        </div>
        <a class="btn btn-primary shadow-sm" asp-page="/Cart/Index" asp-area="Store">
            <i class="bi bi-cart3"></i> View Cart (@Model.CartCount)
        </a>
    </div>
</section>

<section class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <h5 class="mb-3"><i class="bi bi-funnel"></i> Filter Products</h5>
    <form method="get" class="row g-3">
        <div class="col-md-5">
            <label class="form-label fw-semibold">
                <i class="bi bi-search"></i> Search
            </label>
            <input class="form-control" name="search" value="@Model.Search" placeholder="Search for products..." />
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                <i class="bi bi-tags"></i> Category
            </label>
            <select class="form-select" name="categoryId">
                <option value="">All categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end gap-2">
            <button class="btn btn-primary w-100" type="submit">
                <i class="bi bi-check-circle"></i> Apply
            </button>
            <a class="btn btn-outline-secondary w-100" asp-page="/Catalog/Index" asp-area="Store">
                <i class="bi bi-arrow-counterclockwise"></i> Reset
            </a>
        </div>
    </form>
</section>

@if (Model.Products.Any())
{
    <div class="mb-3">
        <p class="text-muted">
            <i class="bi bi-grid"></i> Showing <strong>@Model.Products.Count()</strong> products
        </p>
    </div>
    
    <section class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card product-card h-100 shadow-sm border-0">
                    <div class="position-relative overflow-hidden">
                        <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id">
                            <img class="card-img-top product-image" src="@(product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" alt="@product.Name" style="height:250px;object-fit:cover;transition:transform 0.3s ease;" />
                        </a>
                        <div class="position-absolute top-0 end-0 m-2">
                            @if (product.AvailableStock > 0 && product.AvailableStock <= 5)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-exclamation-triangle"></i> Low Stock
                                </span>
                            }
                            else if (product.AvailableStock > 0)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> In Stock
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Out of Stock
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@product.Name</h5>
                                @if (product.Category != null)
                                {
                                    <div class="text-muted small">
                                        <i class="bi bi-tag"></i> @product.Category.Name
                                    </div>
                                }
                            </div>
                        </div>
                        <p class="card-text text-muted small mt-2 flex-grow-1">
                            @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                        </p>
                        @if (product.Specifications.Any())
                        {
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @foreach (var spec in product.Specifications.Take(2))
                                {
                                    <span class="badge bg-light text-dark border">@spec.Key: @spec.Value</span>
                                }
                            </div>
                        }
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 mb-0 text-primary">@product.Price.ToString("C")</span>
                                <a asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </div>
                            @if (product.AvailableStock > 0)
                            {
                                <form method="post" asp-page-handler="Add">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button class="btn btn-primary w-100" type="submit">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-x-circle"></i> Out of Stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-inbox display-1 text-muted"></i>
        </div>
        <h3 class="text-muted">No products found</h3>
        <p class="text-muted">Try adjusting your search or filter criteria</p>
        <a class="btn btn-primary" asp-page="/Catalog/Index" asp-area="Store">
            <i class="bi bi-arrow-counterclockwise"></i> Reset Filters
        </a>
    </div>
}

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
    }
    
    .product-card:hover .product-image {
        transform: scale(1.05);
    }
    
    .breadcrumb-item + .breadcrumb-item::before {
        content: "â€º";
        font-size: 1.2em;
    }
</style>
