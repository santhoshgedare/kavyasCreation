@page
@model Web.Areas.Store.Pages.Payment.IndexModel
@{
    ViewData["Title"] = "Payment";
}
<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-1">
                <i class="bi bi-credit-card text-success"></i> Payment
            </h1>
            <p class="text-muted mb-0">Complete your purchase securely.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Checkout/Index" asp-area="Store">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Your cart is empty.</strong> Add items to your cart before checkout.
        </div>
        <a class="btn btn-primary" asp-area="Store" asp-page="/Catalog/Index">
            <i class="bi bi-shop"></i> Continue Shopping
        </a>
    }
    else if (Model.PaymentComplete)
    {
        <div class="alert alert-success">
            <h4 class="alert-heading">
                <i class="bi bi-check-circle-fill me-2"></i>Payment Successful!
            </h4>
            <p>Your order has been placed and stock has been reserved.</p>
            <hr>
            <p class="mb-0">You will receive a confirmation email shortly.</p>
        </div>
        <a class="btn btn-primary" asp-page="/Orders/Index" asp-area="Store">
            <i class="bi bi-bag-check"></i> View Orders
        </a>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="bi bi-exclamation-octagon me-2"></i>
                <strong>Error:</strong> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (Model.ReservationExpiresAt.HasValue)
        {
            <div class="alert alert-warning" id="reservationAlert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clock-history fs-3 me-3"></i>
                    <div>
                        <strong>Stock Reserved!</strong>
                        <div>Complete payment within: <strong id="countdown" class="text-danger fs-5"></strong></div>
                    </div>
                </div>
            </div>
        }
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-box text-muted me-2"></i>
                                                <strong>@item.Name</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@item.Quantity</span>
                                            </td>
                                            <td class="text-end">@((item.Price * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="2" class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end"><h5 class="mb-0 text-success">@Model.Total.ToString("C")</h5></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-shield-check text-success"></i> Secure Payment
                        </h5>
                        <form method="post" id="paymentForm">
                            <button class="btn btn-success btn-lg w-100" type="submit" id="paymentBtn">
                                <i class="bi bi-check-circle me-2"></i>
                                Complete Payment & Place Order
                            </button>
                        </form>
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-lock-fill"></i> Your payment is secure
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    @if (Model.ReservationExpiresAt.HasValue)
    {
        <script>
            const expiresAt = new Date('@Model.ReservationExpiresAt.Value.ToString("o")');
            
            function updateCountdown() {
                const now = new Date();
                const diff = expiresAt - now;
                
                if (diff <= 0) {
                    document.getElementById('countdown').textContent = 'EXPIRED';
                    document.getElementById('reservationAlert').className = 'alert alert-danger';
                    document.getElementById('paymentBtn').disabled = true;
                    showToast('Your reservation has expired. Please return to cart and try again.', 'error');
                    return;
                }
                
                const minutes = Math.floor(diff / 60000);
                const seconds = Math.floor((diff % 60000) / 1000);
                
                const countdownEl = document.getElementById('countdown');
                countdownEl.textContent = `${minutes}m ${seconds}s`;
                
                if (minutes < 5) {
                    countdownEl.classList.add('text-danger');
                    countdownEl.classList.remove('text-warning');
                } else if (minutes < 10) {
                    countdownEl.classList.add('text-warning');
                    countdownEl.classList.remove('text-danger');
                }
                
                setTimeout(updateCountdown, 1000);
            }
            
            updateCountdown();
        </script>
    }
    
    <script>
        document.getElementById('paymentForm')?.addEventListener('submit', function(e) {
            const btn = document.getElementById('paymentBtn');
            setButtonLoading(btn, true);
        });
    </script>
}

