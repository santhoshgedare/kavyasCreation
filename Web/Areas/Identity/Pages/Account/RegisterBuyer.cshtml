@page
@model Web.Areas.Identity.Pages.Account.RegisterBuyerModel
@{
    ViewData["Title"] = "Buyer Company Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-building"></i> Register Buyer Company
                    </h3>
                    <p class="mb-0 small">Create a buyer account to purchase from our vendors</p>
                </div>
                <div class="card-body">
                    <form id="registerForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Company Information -->
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-building"></i> Company Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyName" class="form-label"></label>
                                <input asp-for="Input.CompanyName" class="form-control" />
                                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyEmail" class="form-label"></label>
                                <input asp-for="Input.CompanyEmail" class="form-control" />
                                <span asp-validation-for="Input.CompanyEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyPhone" class="form-label"></label>
                                <input asp-for="Input.CompanyPhone" class="form-control" />
                                <span asp-validation-for="Input.CompanyPhone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.TaxId" class="form-label"></label>
                                <input asp-for="Input.TaxId" class="form-control" />
                                <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label"></label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Address" class="form-label"></label>
                                <input asp-for="Input.Address" class="form-control" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.City" class="form-label"></label>
                                <input asp-for="Input.City" class="form-control" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.State" class="form-label"></label>
                                <input asp-for="Input.State" class="form-control" />
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.PostalCode" class="form-label"></label>
                                <input asp-for="Input.PostalCode" class="form-control" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.Country" class="form-label"></label>
                                <input asp-for="Input.Country" class="form-control" />
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Admin User Information -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="bi bi-person-badge"></i> Admin User Information
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FirstName" class="form-label"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LastName" class="form-label"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                <small class="text-muted">This will be your login email</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.JobTitle" class="form-label"></label>
                                <input asp-for="Input.JobTitle" class="form-control" />
                                <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Department" class="form-label"></label>
                                <input asp-for="Input.Department" class="form-control" />
                                <span asp-validation-for="Input.Department" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> Your buyer company account will be reviewed by our team. You will be notified once approved.
                        </div>

                        <div class="d-grid gap-2">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Register as Buyer
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Already have an account? <a asp-page="./Login">Sign in</a>
                    </p>
                    <p class="mb-0">
                        Want to sell instead? <a asp-page="./RegisterVendor">Register as Vendor</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
