@page "{id:guid}"
@model Web.Areas.Admin.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}
<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="display-6 mb-1">Delete Product</h1>
            <p class="text-muted mb-0">This action can be restored from Deleted list.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Products/Index" asp-area="Admin">Back</a>
    </div>
    <div class="alert alert-warning">Are you sure you want to observed delete this product?</div>

    <div class="card mb-3 shadow-sm" style="max-width: 640px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@(Model.Product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" class="img-fluid rounded-start" alt="@Model.Product.Name" style="height:100%;object-fit:cover;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Product.Name</h5>
                    <p class="card-text text-muted">@Model.Product.Description</p>
                    <p class="card-text fw-semibold">@Model.Product.Price.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <form method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Product.Id" />
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-outline-secondary" asp-page="/Products/Index" asp-area="Admin">Cancel</a>
    </form>
</section>
