@page
@model Web.Areas.Admin.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Manage Products";
}
<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-1">
                <i class="bi bi-box-seam text-primary"></i> Products
            </h1>
            <p class="text-muted mb-0">Manage catalog items, pricing, and stock.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-page="/Products/Deleted" asp-area="Admin">
                <i class="bi bi-trash"></i> Deleted Items
            </a>
            <a class="btn btn-primary" asp-page="/Products/Create" asp-area="Admin">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No products available. <a asp-page="/Products/Create" asp-area="Admin" class="alert-link">Create your first product</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Category</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Stock</th>
                        <th class="text-end">Reserved</th>
                        <th class="text-end">Available</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" alt="@product.Name" class="rounded" style="width:64px;height:64px;object-fit:cover;" />
                                    <div class="ms-3">
                                        <div class="fw-semibold">
                                            <a class="text-decoration-none" asp-page="/Catalog/Details" asp-area="Store" asp-route-id="@product.Id">
                                                @product.Name
                                            </a>
                                            @if (product.IsFeatured)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">
                                                    <i class="bi bi-star-fill"></i> Featured
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(product.Description))
                                        {
                                            <div class="text-muted small">@product.Description.Substring(0, Math.Min(60, product.Description.Length))...</div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-tag"></i> @product.Category?.Name
                                </span>
                            </td>
                            <td class="text-end fw-semibold">@product.Price.ToString("C")</td>
                            <td class="text-end">
                                @if (product.Stock <= 0)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> @product.Stock
                                    </span>
                                }
                                else if (product.LowStockAlert)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-exclamation-triangle"></i> @product.Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="text-success">
                                        <i class="bi bi-check-circle"></i> @product.Stock
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                @if (product.ReservedStock > 0)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock-history"></i> @product.ReservedStock
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-end">
                                <strong class="@(product.AvailableStock <= 0 ? "text-danger" : product.LowStockAlert ? "text-warning" : "text-success")">
                                    @product.AvailableStock
                                </strong>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" asp-page="/Products/Edit" asp-area="Admin" asp-route-id="@product.Id" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a class="btn btn-outline-info" asp-page="/Inventory/StockMovements" asp-area="Admin" asp-route-productId="@product.Id" title="Stock History">
                                        <i class="bi bi-clock-history"></i>
                                    </a>
                                    <a class="btn btn-outline-danger" href="javascript:void(0)" 
                                       onclick="confirmAction('Are you sure you want to delete @product.Name?', () => window.location.href = '@Url.Page("/Products/Delete", new { area = "Admin", id = product.Id })', 'Confirm Delete')"
                                       title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
