@page "{id:guid}"
@model Web.Areas.Admin.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}
<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="display-6 mb-1">Delete Category</h1>
            <p class="text-muted mb-0">This action can be restored from Deleted list.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Categories/Index" asp-area="Admin">Back</a>
    </div>
    <div class="alert alert-warning">Are you sure you want to delete this category?</div>

    <div class="card mb-3 shadow-sm" style="max-width: 640px;">
        <div class="card-body">
            <h5 class="card-title">@Model.Category.Name</h5>
            <p class="card-text text-muted">@Model.Category.Description</p>
        </div>
    </div>

    <form method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Category.Id" />
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-outline-secondary" asp-page="/Categories/Index" asp-area="Admin">Cancel</a>
    </form>
</section>
