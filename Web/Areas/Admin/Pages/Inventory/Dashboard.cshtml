@page
@model Web.Areas.Admin.Pages.Inventory.DashboardModel
@{
    ViewData["Title"] = "Inventory Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 mb-1">Inventory Dashboard</h1>
        <p class="text-muted mb-0">Real-time stock overview and alerts</p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-page="/Inventory/StockMovements" asp-area="Admin">View Movements</a>
        <a class="btn btn-outline-primary" asp-page="/Inventory/Reservations" asp-area="Admin">Reservations</a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Total Products</p>
                        <h2 class="mb-0">@Model.TotalProducts</h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded p-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-box-seam text-primary" viewBox="0 0 16 16">
                            <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <a asp-page="/Inventory/Reservations" asp-area="Admin" class="text-decoration-none">
            <div class="card shadow-sm @(Model.ActiveReservations > 0 ? "border-warning" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Active Reservations</p>
                            <h2 class="mb-0 @(Model.ActiveReservations > 0 ? "text-warning" : "")">@Model.ActiveReservations</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded p-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-clock-history text-warning" viewBox="0 0 16 16">
                                <path d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022zm2.004.45a7 7 0 0 0-.985-.299l.219-.976q.576.129 1.126.342zm1.37.71a7 7 0 0 0-.439-.27l.493-.87a8 8 0 0 1 .979.654l-.615.789a7 7 0 0 0-.418-.302zm1.834 1.79a7 7 0 0 0-.653-.796l.724-.69q.406.429.747.91zm.744 1.352a7 7 0 0 0-.214-.468l.893-.45a8 8 0 0 1 .45 1.088l-.95.313a7 7 0 0 0-.179-.483m.53 2.507a7 7 0 0 0-.1-1.025l.985-.17q.1.58.116 1.17zm-.131 1.538q.05-.254.081-.51l.993.123a8 8 0 0 1-.23 1.155l-.964-.267q.069-.247.12-.501m-.952 2.379q.276-.436.486-.908l.914.405q-.24.54-.555 1.038zm-.964 1.205q.183-.183.35-.378l.758.653a8 8 0 0 1-.401.432z"/>
                                <path d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0z"/>
                                <path d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5"/>
                            </svg>
                        </div>
                    </div>
                    @if (Model.ActiveReservations > 0)
                    {
                        <small class="text-muted">Click to view live reservations</small>
                    }
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Low Stock</p>
                        <h2 class="mb-0 text-warning">@Model.LowStockCount</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded p-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-exclamation-triangle text-warning" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Out of Stock</p>
                        <h2 class="mb-0 text-danger">@Model.OutOfStockProducts</h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded p-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-x-circle text-danger" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="bg-white rounded-3 shadow-sm p-4">
    <h3 class="mb-3">Low Stock Alerts</h3>
    @if (Model.LowStockProducts.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Current Stock</th>
                        <th>Reserved</th>
                        <th>Available</th>
                        <th>Reorder Level</th>
                        <th>Reorder Qty</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.LowStockProducts)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@(product.Images.FirstOrDefault()?.Url ?? "/uploads/products/placeholder.svg")" alt="@product.Name" class="rounded" style="width:40px;height:40px;object-fit:cover;" />
                                    <span>@product.Name</span>
                                </div>
                            </td>
                            <td>@product.Category?.Name</td>
                            <td>
                                @if (product.Stock <= 0)
                                {
                                    <span class="badge bg-danger">@product.Stock</span>
                                }
                                else if (product.Stock <= product.ReorderLevel)
                                {
                                    <span class="badge bg-warning">@product.Stock</span>
                                }
                                else
                                {
                                    <span>@product.Stock</span>
                                }
                            </td>
                            <td>@product.ReservedStock</td>
                            <td>
                                <strong class="@(product.AvailableStock <= 0 ? "text-danger" : product.AvailableStock <= product.ReorderLevel ? "text-warning" : "")">
                                    @product.AvailableStock
                                </strong>
                            </td>
                            <td>@product.ReorderLevel</td>
                            <td>@product.ReorderQuantity</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" asp-page="/Inventory/AdjustStock" asp-route-id="@product.Id" asp-area="Admin">Adjust</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
            </svg>
            All products have sufficient stock levels!
        </div>
    }
</section>
