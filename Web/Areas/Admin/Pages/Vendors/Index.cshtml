@page
@model Web.Areas.Admin.Pages.Vendors.IndexModel
@{
    ViewData["Title"] = "Manage Vendors";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h3">
                <i class="bi bi-shop"></i> Vendor Companies
            </h1>
            <p class="text-muted">Manage all vendor companies on the platform</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Admin" asp-page="/Vendors/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Vendor
            </a>
            <a asp-area="Admin" asp-page="/Vendors/Pending" class="btn btn-warning">
                <i class="bi bi-clock-history"></i> Pending Approvals
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Vendors.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Email</th>
                                <th>Location</th>
                                <th>Tax ID</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vendor in Model.Vendors)
                            {
                                <tr>
                                    <td>
                                        <strong>@vendor.CompanyName</strong>
                                        @if (!string.IsNullOrEmpty(vendor.Description))
                                        {
                                            <br><small class="text-muted">@vendor.Description.Substring(0, Math.Min(50, vendor.Description.Length))...</small>
                                        }
                                    </td>
                                    <td>@vendor.ContactEmail</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(vendor.City))
                                        {
                                            <text>@vendor.City, @vendor.State</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(vendor.TaxId))
                                        {
                                            <code>@vendor.TaxId</code>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        @if (vendor.IsApproved && vendor.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Active
                                            </span>
                                        }
                                        else if (!vendor.IsApproved)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Pending
                                            </span>
                                        }
                                        else if (!vendor.IsActive)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@vendor.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-page="/Vendors/Edit" asp-route-id="@vendor.Id" 
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Vendors/Users" asp-route-id="@vendor.Id" 
                                               class="btn btn-outline-info" title="Manage Users">
                                                <i class="bi bi-people"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Vendors/Details" asp-route-id="@vendor.Id" 
                                               class="btn btn-outline-secondary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                Total: <strong>@Model.Vendors.Count</strong> vendors |
                Active: <strong>@Model.Vendors.Count(v => v.IsActive)</strong> |
                Pending: <strong>@Model.Vendors.Count(v => !v.IsApproved)</strong>
            </p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-shop text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Vendors Yet</h4>
                <p class="text-muted">Start by creating your first vendor company.</p>
                <a asp-area="Admin" asp-page="/Vendors/Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Vendor
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
