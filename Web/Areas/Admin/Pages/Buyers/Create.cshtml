@page
@model Web.Areas.Admin.Pages.Buyers.CreateModel
@{
    ViewData["Title"] = "Create Buyer Company";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-building"></i> Create Buyer Company
                    </h3>
                    <p class="mb-0 small">Admin can create buyer companies directly</p>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-building"></i> Company Information
                        </h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyName" class="form-label">Company Name</label>
                                <input asp-for="Input.CompanyName" class="form-control" />
                                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyEmail" class="form-label">Company Email</label>
                                <input asp-for="Input.CompanyEmail" class="form-control" />
                                <span asp-validation-for="Input.CompanyEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.CompanyPhone" class="form-label">Company Phone</label>
                                <input asp-for="Input.CompanyPhone" class="form-control" />
                                <span asp-validation-for="Input.CompanyPhone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.TaxId" class="form-label">Tax ID / GST</label>
                                <input asp-for="Input.TaxId" class="form-control" />
                                <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Description</label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Address" class="form-label">Address</label>
                                <input asp-for="Input.Address" class="form-control" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.City" class="form-label">City</label>
                                <input asp-for="Input.City" class="form-control" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.State" class="form-label">State</label>
                                <input asp-for="Input.State" class="form-control" />
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.PostalCode" class="form-label">Postal Code</label>
                                <input asp-for="Input.PostalCode" class="form-control" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.Country" class="form-label">Country</label>
                                <input asp-for="Input.Country" class="form-control" />
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.AutoApprove" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Input.AutoApprove" class="form-check-label">
                                Auto-approve this buyer company (immediately active)
                            </label>
                        </div>

                        <hr class="my-4">

                        <div class="mb-3 form-check">
                            <input asp-for="Input.CreateAdminUser" class="form-check-input" type="checkbox" id="createUserToggle" />
                            <label asp-for="Input.CreateAdminUser" class="form-check-label">
                                Create admin user for this company
                            </label>
                        </div>

                        <div id="adminUserSection" style="display: none;">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-badge"></i> Admin User Information
                            </h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Input.JobTitle" class="form-label">Job Title</label>
                                    <input asp-for="Input.JobTitle" class="form-control" />
                                    <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Input.Department" class="form-label">Department</label>
                                    <input asp-for="Input.Department" class="form-control" />
                                    <span asp-validation-for="Input.Department" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <input asp-for="Input.Password" class="form-control" type="password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Create Buyer Company
                            </button>
                            <a asp-area="Admin" asp-page="/Buyers/Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script>
        document.getElementById('createUserToggle').addEventListener('change', function() {
            document.getElementById('adminUserSection').style.display = this.checked ? 'block' : 'none';
        });
    </script>
}
