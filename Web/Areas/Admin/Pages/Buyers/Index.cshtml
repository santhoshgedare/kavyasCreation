@page
@model Web.Areas.Admin.Pages.Buyers.IndexModel
@{
    ViewData["Title"] = "Manage Buyer Companies";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h3">
                <i class="bi bi-building"></i> Buyer Companies
            </h1>
            <p class="text-muted">Manage all buyer companies on the platform</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Admin" asp-page="/Buyers/Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Buyer
            </a>
            <a asp-area="Admin" asp-page="/Buyers/Pending" class="btn btn-warning">
                <i class="bi bi-clock-history"></i> Pending Approvals
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.BuyerCompanies.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Email</th>
                                <th>Location</th>
                                <th>Tax ID</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var buyer in Model.BuyerCompanies)
                            {
                                <tr>
                                    <td>
                                        <strong>@buyer.CompanyName</strong>
                                        @if (!string.IsNullOrEmpty(buyer.Description))
                                        {
                                            <br><small class="text-muted">@buyer.Description.Substring(0, Math.Min(50, buyer.Description.Length))...</small>
                                        }
                                    </td>
                                    <td>@buyer.ContactEmail</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(buyer.City))
                                        {
                                            <text>@buyer.City, @buyer.State</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(buyer.TaxId))
                                        {
                                            <code>@buyer.TaxId</code>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        @if (buyer.IsApproved && buyer.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Active
                                            </span>
                                        }
                                        else if (!buyer.IsApproved)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Pending
                                            </span>
                                        }
                                        else if (!buyer.IsActive)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@buyer.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-page="/Buyers/Edit" asp-route-id="@buyer.Id" 
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Buyers/Users" asp-route-id="@buyer.Id" 
                                               class="btn btn-outline-info" title="Manage Users">
                                                <i class="bi bi-people"></i>
                                            </a>
                                            <a asp-area="Admin" asp-page="/Buyers/Details" asp-route-id="@buyer.Id" 
                                               class="btn btn-outline-secondary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                Total: <strong>@Model.BuyerCompanies.Count</strong> buyers |
                Active: <strong>@Model.BuyerCompanies.Count(b => b.IsActive)</strong> |
                Pending: <strong>@Model.BuyerCompanies.Count(b => !b.IsApproved)</strong>
            </p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Buyer Companies Yet</h4>
                <p class="text-muted">Start by creating your first buyer company.</p>
                <a asp-area="Admin" asp-page="/Buyers/Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create First Buyer
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
