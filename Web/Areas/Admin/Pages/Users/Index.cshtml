@page
@model Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Profiles";
}

<section class="bg-white rounded-3 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-1">
                <i class="bi bi-people text-primary"></i> User Profiles
            </h1>
            <p class="text-muted mb-0">View and manage customer profiles</p>
        </div>
        <span class="badge bg-primary fs-5">
            <i class="bi bi-person-badge"></i> @Model.UserProfiles.Count Total Users
        </span>
    </div>

    @if (!Model.UserProfiles.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No user profiles found. Users will appear here once they complete their profiles.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User</th>
                        <th>Contact</th>
                        <th>Location</th>
                        <th>Gender</th>
                        <th>Created</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profile in Model.UserProfiles)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-person-fill text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@profile.FullName</div>
                                        <small class="text-muted">
                                            <i class="bi bi-envelope"></i> @profile.Email
                                        </small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div>
                                    @if (!string.IsNullOrWhiteSpace(profile.PhoneNumber))
                                    {
                                        <div>
                                            <i class="bi bi-phone text-success"></i> @profile.PhoneNumber
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(profile.AlternatePhoneNumber))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-phone-vibrate"></i> @profile.AlternatePhoneNumber
                                        </small>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(profile.AlternateEmail))
                                    {
                                        <div>
                                            <small class="text-muted">
                                                <i class="bi bi-envelope-plus"></i> @profile.AlternateEmail
                                            </small>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (profile.Addresses.Any())
                                {
                                    var primaryAddress = profile.Addresses.FirstOrDefault(a => a.IsPrimary);
                                    if (primaryAddress != null)
                                    {
                                        <div>
                                            <i class="bi bi-geo-alt"></i> @primaryAddress.City, @primaryAddress.State
                                        </div>
                                        <small class="text-muted">@primaryAddress.Country</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            @profile.Addresses.Count @(profile.Addresses.Count == 1 ? "Address" : "Addresses")
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">No address</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(profile.Gender))
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-gender-ambiguous"></i> @profile.Gender
                                    </span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @profile.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Active
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
