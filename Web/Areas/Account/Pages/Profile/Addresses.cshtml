@page
@model Web.Areas.Account.Pages.Profile.AddressesModel
@{
    ViewData["Title"] = "My Addresses";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">My Addresses</h1>
                    <p class="text-muted mb-0">Manage your shipping and billing addresses</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="/Profile/Index" asp-area="Account" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Profile
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addressModal" onclick="clearForm()">
                        <i class="bi bi-plus-circle"></i> Add Address
                    </button>
                </div>
            </div>

            <!-- Addresses List -->
            @if (!Model.Addresses.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-geo-alt text-muted" style="font-size: 4rem;"></i>
                        <h5 class="mt-3">No Addresses Yet</h5>
                        <p class="text-muted mb-3">Add your first address to get started with orders</p>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addressModal" onclick="clearForm()">
                            <i class="bi bi-plus-circle"></i> Add Your First Address
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="col-md-6">
                            <div class="card h-100 @(address.IsPrimary ? "border-primary" : "")">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <i class="bi bi-geo-alt-fill text-primary"></i> @address.Label
                                            </h5>
                                            <div class="d-flex gap-1 flex-wrap">
                                                @if (address.IsPrimary)
                                                {
                                                    <span class="badge bg-primary">Primary</span>
                                                }
                                                @if (address.IsShippingDefault)
                                                {
                                                    <span class="badge bg-success">Default Shipping</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary" onclick="editAddress(@address.Id, '@address.Label', '@address.AddressLine1', '@address.AddressLine2', '@address.City', '@address.State', '@address.PostalCode', '@address.Country', '@address.PhoneNumber', @address.IsPrimary.ToString().ToLower(), @address.IsShippingDefault.ToString().ToLower())">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete this address?');">
                                                <input type="hidden" name="id" value="@address.Id" />
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                    <address class="mb-3">
                                        @address.AddressLine1<br/>
                                        @if (!string.IsNullOrWhiteSpace(address.AddressLine2))
                                        {
                                            @address.AddressLine2<br/>
                                        }
                                        @address.City, @address.State @address.PostalCode<br/>
                                        @address.Country
                                        @if (!string.IsNullOrWhiteSpace(address.PhoneNumber))
                                        {
                                            <br/><i class="bi bi-phone"></i> @address.PhoneNumber
                                        }
                                    </address>

                                    <div class="d-flex gap-2">
                                        @if (!address.IsPrimary)
                                        {
                                            <form method="post" asp-page-handler="SetPrimary" class="flex-fill">
                                                <input type="hidden" name="id" value="@address.Id" />
                                                <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                                    <i class="bi bi-star"></i> Set as Primary
                                                </button>
                                            </form>
                                        }
                                        @if (!address.IsShippingDefault)
                                        {
                                            <form method="post" asp-page-handler="SetShipping" class="flex-fill">
                                                <input type="hidden" name="id" value="@address.Id" />
                                                <button type="submit" class="btn btn-outline-success btn-sm w-100">
                                                    <i class="bi bi-truck"></i> Set as Shipping
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Address Modal -->
<div class="modal fade" id="addressModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="addressForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add Address</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Input.Id" id="addressId" />
                    
                    <div class="mb-3">
                        <label asp-for="Input.Label" class="form-label"></label>
                        <select asp-for="Input.Label" class="form-select" required>
                            <option value="">Choose...</option>
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Billing">Billing</option>
                            <option value="Shipping">Shipping</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Input.Label" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.AddressLine1" class="form-label"></label>
                        <input asp-for="Input.AddressLine1" class="form-control" required />
                        <span asp-validation-for="Input.AddressLine1" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.AddressLine2" class="form-label"></label>
                        <input asp-for="Input.AddressLine2" class="form-control" />
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.City" class="form-label"></label>
                            <input asp-for="Input.City" class="form-control" required />
                            <span asp-validation-for="Input.City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.State" class="form-label"></label>
                            <input asp-for="Input.State" class="form-control" required />
                            <span asp-validation-for="Input.State" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.PostalCode" class="form-label"></label>
                            <input asp-for="Input.PostalCode" class="form-control" required />
                            <span asp-validation-for="Input.PostalCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Country" class="form-label"></label>
                            <input asp-for="Input.Country" class="form-control" value="USA" required />
                            <span asp-validation-for="Input.Country" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                    </div>

                    <div class="form-check mb-2">
                        <input asp-for="Input.IsPrimary" class="form-check-input" />
                        <label asp-for="Input.IsPrimary" class="form-check-label"></label>
                    </div>

                    <div class="form-check">
                        <input asp-for="Input.IsShippingDefault" class="form-check-input" />
                        <label asp-for="Input.IsShippingDefault" class="form-check-label"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveBtn">
                        <i class="bi bi-check-circle"></i> Save Address
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function clearForm() {
            document.getElementById('addressForm').action = '?handler=Add';
            document.getElementById('modalTitle').textContent = 'Add Address';
            document.getElementById('addressId').value = '';
            document.getElementById('Input_Label').value = '';
            document.getElementById('Input_AddressLine1').value = '';
            document.getElementById('Input_AddressLine2').value = '';
            document.getElementById('Input_City').value = '';
            document.getElementById('Input_State').value = '';
            document.getElementById('Input_PostalCode').value = '';
            document.getElementById('Input_Country').value = 'USA';
            document.getElementById('Input_PhoneNumber').value = '';
            document.getElementById('Input_IsPrimary').checked = false;
            document.getElementById('Input_IsShippingDefault').checked = false;
        }

        function editAddress(id, label, line1, line2, city, state, postal, country, phone, isPrimary, isShipping) {
            document.getElementById('addressForm').action = '?handler=Edit';
            document.getElementById('modalTitle').textContent = 'Edit Address';
            document.getElementById('addressId').value = id;
            document.getElementById('Input_Label').value = label;
            document.getElementById('Input_AddressLine1').value = line1;
            document.getElementById('Input_AddressLine2').value = line2 || '';
            document.getElementById('Input_City').value = city;
            document.getElementById('Input_State').value = state;
            document.getElementById('Input_PostalCode').value = postal;
            document.getElementById('Input_Country').value = country;
            document.getElementById('Input_PhoneNumber').value = phone || '';
            document.getElementById('Input_IsPrimary').checked = isPrimary;
            document.getElementById('Input_IsShippingDefault').checked = isShipping;
            
            new bootstrap.Modal(document.getElementById('addressModal')).show();
        }

        document.getElementById('addressForm').addEventListener('submit', function() {
            const btn = document.getElementById('saveBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';
        });
    </script>
}
